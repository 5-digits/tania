{% extends 'base.html.twig' %}

{% block body %}
<div class="be-wrapper">
    <div class="main-content">
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div style="text-align: center; margin-bottom: 50px;">
                    <img src="{{ asset('assets/img/tania.png') }}" width="180" class="tania-img">
                    <h1>Welcome to the installer</h1>
                </div>
                <form action="{{ path('installer_create') }}" method="post">
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <legend>Database Configuration</legend>
                            <div class="form-group">
                                <label for="db-name">Database Name</label>
                                <input type="text" id="db-name" class="form-control" name="db-name">
                            </div>
                            <div class="form-group">
                                <label for="db-host">Database Host</label>
                                <input type="text" id="db-host" class="form-control" name="db-host">
                            </div>
                            <div class="form-group">
                                <label for="db-port">Database Port</label>
                                <input type="text" id="db-port" class="form-control" name="db-port">
                            </div>
                            <div class="form-group">
                                <label for="db-username">Database Username</label>
                                <input type="text" id="db-username" class="form-control" name="db-username">
                            </div>
                            <div class="form-group">
                                <label for="db-password">Database Password</label>
                                <input type="text" id="db-password" class="form-control" name="db-password">
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <legend>Mailer Configuration</legend>
                            <div class="form-group">
                                <label for="mailer-host">Mailer Host</label>
                                <input type="text" id="mailer-host" class="form-control" name="mailer-host">
                            </div>
                            <div class="form-group">
                                <label for="mailer-username">Mailer Username</label>
                                <input type="text" id="mailer-username" class="form-control" name="mailer-username">
                            </div>
                            <div class="form-group">
                                <label for="mailer-password">Mailer Password</label>
                                <input type="text" id="mailer-password" class="form-control" name="mailer-password">
                            </div>
                            <div class="form-group">
                                <label for="mailer-address">Mailer From Address</label>
                                <input type="text" id="mailer-address" class="form-control" name="mailer-address">
                            </div>
                            <div class="form-group">
                                <label for="mailer-sender">Mailer Sender Name</label>
                                <input type="text" id="mailer-sender" class="form-control" name="mailer-sender">
                            </div>
                        </div>
                    </div>
                    <div style="text-align: center;">
                        <button type="submit" class="btn btn-primary btn-lg">Save Configuration</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
