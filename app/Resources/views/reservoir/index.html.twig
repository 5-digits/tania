{% extends 'base.html.twig' %}

{% block body %}
<div class="be-wrapper">
    {% include 'navbar.html.twig' %} 
    {% include 'sidebar.html.twig' %}

    <div class="be-content">
        <div class="page-head">
            <h2 class="page-head-title">Reservoirs</h2>
        </div>
        <div class="main-content container-fluid">
          
            <!-- Nutrient Reservoir -->
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-default panel-table">
                        <div class="panel-heading">You have 3 reservoirs</div>
                        <div class="panel-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Capacity</th>
                                        <th>Mesurement Unit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for reservoir in reservoirs %}
                                    <tr>
                                        <td class="cell-detail">{{ reservoir.name }} <span class="cell-detail-description">Used in 2 area</span></td>
                                        <td class="cell-detail">{{ reservoir.capacity }}</td>
                                        <td class="cell-detail">{{ reservoir.measurementUnit }}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading panel-heading-dividerd">
                        Add Reservoir
                        </div>
                        <div class="panel-body">
                            {{ form_start(form) }}
                                {{ form_errors(form) }}
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            {{ form_label(form.name) }}
                                            {{ form_errors(form.name) }}
                                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-md-6">
                                            {{ form_label(form.field) }}
                                            {{ form_errors(form.field) }}
                                            {{ form_widget(form.field, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-8">
                                            {{ form_label(form.capacity) }}
                                            {{ form_errors(form.capacity) }}
                                            {{ form_widget(form.capacity, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-md-4">
                                            {{ form_label(form.measurementUnit) }}
                                            {{ form_errors(form.measurementUnit) }}
                                            {{ form_widget(form.measurementUnit, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}